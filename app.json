{
	"id": "com.plugwise",
	"version": "1.0.0",
	"compatibility": "0.x || 1.x",
	"category": "appliances",
	"name": {
		"en": "Plugwise",
		"nl": "Plugwise"
	},
	"description": {
		"en": "Connect Homey with your Plugwise devices to manage your energy consumption throughout your house",
		"en": "Verbind Homey met je Plugwise apparaten om stoomgebruik te meten"
	},
	"author": {
		"name": "Freek Boelders",
		"email": "freek@athom.nl"
	},
	"images": {
    	"large": "./assets/images/large.jpg",
    	"small": "./assets/images/small.jpg"
	},
	"dependencies": {
	    "request": "*",
	    "pixl-xml": "1.0.4",
	    "plugwise": "0.1.0",
	    "mdns-js": "0.4.0"
  	},
	"permissions": [],
	"drivers": [
		{
			"id": "anna",
			"name": {
				"en": "Anna (Smile)"
			},
			"images": {
		        "large": "./drivers/anna/assets/images/large.jpg",
		        "small": "./drivers/anna/assets/images/small.jpg"
		    },
			"class": "thermostat",
			"icon": "/assets/icon.svg",
			"capabilities": [ "target_temperature", "measure_temperature" ],
			"pair": [
					{
						"id": "start"
					},
					{
						"id": "list_devices",
				        "template": "list_devices_singular",
				        "navigation": {
				          "next": "authenticate"
				        }
					},
					{
						"id": "authenticate"
					}
			]
		},
		{
			"id": "stretch",
			"name": {
				"en": "Plugwise (Stretch)"
			},
			"images": {
		        "large": "./drivers/stretch/assets/images/large.jpg",
		        "small": "./drivers/stretch/assets/images/small.jpg"
		    },
			"class": "socket",
			"capabilities": [ "onoff" ],
			"pair": [
					{
						"id": "start"
					},
					{
						"id": "authenticate"
					},
					{
						"id": "list_devices",
				        "template": "list_devices",
				        "navigation": {
				          "next": "add_device"
				        }
					},
					{
						"id": "add_device",
						"template": "add_devices"
					}
			]
		}
	]
}